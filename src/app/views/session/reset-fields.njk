<div class="item">
    <div>Email</div>
    <div class="input">
        <input
            type="email"
            name="email"
            placeholder="Digite o seu email"
            value = "{{ user.email }}"
            onblur="Validate.apply(this,'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input
            type="password"
            name="password"
            value="{{user.email}}"         
            placeholder="Digite sua senha"            
        >
    </div>
</div>

<div class="item">
    <div>Repetir senha</div>
    <div class="input">
        <input
            type="password"
            name="passwordRepeat"
            value="{{user.email}}"         
            placeholder="Repita a senha novamente!"            
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">
