<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input
            type="text"
            name="name"
            placeholder="Digite o nome completo"
            value = "{{ user.name }}"
            required
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input
            type="email"
            name="email"
            placeholder="Digite o seu email"
            value = "{{ user.email }}"
            onblur="Validate.apply(this,'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input
            type="password"
            name="password"
            {%if not user.id%}
            placeholder="Escolha uma senha segura"
            {%else%}
            placeholder="Digite uma nova senha para atualização do cadastro"
            {%endif%}
        >
    </div>
</div>

{%if not user.id%}

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input
            type="password"
            name="passwordRepeat"
            placeholder="Repita a senha"
        >
    </div>
</div>

{%endif%}

<div class="item">
    <div>CPF / CNPJ</div>
    <div class="input">
        <input
            type="text"
            name="cpf_cpnj"
            placeholder="Digite o seu documento"
            value = "{{ user.cpf_cpnj }}"
            onkeydown="Mask.apply(this,'cpfCnpj')"
            onblur="Validate.apply(this,'isCpfCnpj')"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input
            type="text"
            name="cep"
            placeholder="25600-000"
            value = "{{ user.cep }}"
            onkeydown="Mask.apply(this,'cep')"
            onblur="Validate.apply(this,'isCep')"
        >
    </div>
</div>

<div class="item">
    <div>Endereço completo</div>
    <div class="input">
        <input
            type="text"
            name="address"
            placeholder="Digite o seu endereço completo"
            value = "{{ user.address }}"
        >
    </div>
</div>
