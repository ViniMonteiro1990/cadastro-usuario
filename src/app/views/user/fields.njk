<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input
            type="text"
            name="name"
            placeholder="Digite o nome completo"
            value = "{{ user.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input
            type="email"
            name="email"
            placeholder="Digite o seu email"
            value = "{{ user.email }}"
            onblur="Validate.apply(this,'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input
            type="password"
            name="password"
            placeholder="Escolha uma senha"
            value = "{{ user.password }}"
        >
    </div>
</div>

{%if not user.id%}

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input
            type="password"
            name="passwordRepeat"
            placeholder="Repita a senha"
            value = "{{ user.password }}"
        >
    </div>
</div>

{%endif%}

<div class="item">
    <div>CPF / CNPJ</div>
    <div class="input">
        <input
            type="text"
            name="cpf_cpnj"
            placeholder="Digite o seu documento"
            value = "{{ user.cpf_cnpj }}"
            onkeydown="Mask.apply(this,'cpfCnpj')"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input
            type="text"
            name="cep"
            placeholder="25600-000"
            value = "{{ user.cep }}"
            onkeydown="Mask.apply(this,'cep')"
        >
    </div>
</div>

<div class="item">
    <div>Endereço completo</div>
    <div class="input">
        <input
            type="text"
            name="adress"
            placeholder="Digite o seu endereço completo"
            value = "{{ user.adress }}"
        >
    </div>
</div>
